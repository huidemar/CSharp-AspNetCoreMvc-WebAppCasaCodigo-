@{ 
    ViewData["Title"] = "Resumo";
}
@model CasaDoCodigo.Models.ViewModels.CarrinhoViewModel
<h3>Resumo do Pedido</h3>
<div class="panel panel-default">    
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Pedido ???</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>Mévio da Silva</div>
                <div>(11) 9 9999-9999</div>
            </div>
            <div class="col-md-3">
                <div>mevio@mevio.com.br</div>
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>Rua dos Bobos, 0 - Centro - Cidade dos buracos-PR</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-10">
                <h3>Item</h3>
                
            </div>
            <div class="col-md-2 pull-right">
                <h3>Quantidade</h3>
                
            </div>
        </div>
        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-10">
                    <div>@item.Produto.Nome</div>
                </div>
                <div class="col-md-2">                  
                    <div class="text-center">@item.Quantidade</div>
                </div>
            </div>
        }
    </div>
</div>